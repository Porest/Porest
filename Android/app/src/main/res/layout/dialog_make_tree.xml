<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/guideView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:textSize="16sp"
            android:text="새로운 나무"/>

        <ImageView
            android:id="@+id/treeImage"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/guideView"
            android:layout_marginTop="15dp"
            android:src="@drawable/dialog_tree"/>

        <EditText
            android:id="@+id/treeTitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/treeImage"
            android:layout_marginTop="10dp"
            android:hint="나무의 이름"
            android:textSize="16sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/treeTitle"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/leafLimit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="나뭇잎 목표치"
                android:inputType="number"
                android:gravity="center"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ 365"/>
        </LinearLayout>
        <Button
            android:id="@+id/cancelBtn"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="취소"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            android:layout_alignParentBottom="true"/>
        <Button
            android:id="@+id/confirmBtn"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="생성"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
