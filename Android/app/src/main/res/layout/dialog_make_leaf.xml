<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/guideView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:textSize="16sp"
            android:text="새로운 잎사귀"/>

        <ImageView
            android:id="@+id/leafImage"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/guideView"
            android:layout_marginTop="15dp"
            android:src="@drawable/dialog_leaf"/>

        <EditText
            android:id="@+id/leafContent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/leafImage"
            android:layout_marginTop="10dp"
            android:hint="잎사귀의 내용"
            android:textSize="16sp"
            android:gravity="center"/>
        <Button
            android:id="@+id/cancelBtn"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="취소"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            android:layout_alignParentBottom="true"/>
        <Button
            android:id="@+id/confirmBtn"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="생성"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
